height-menu = 62px;
height-footer = 72px;
total = height-menu + height-footer
body
    font-family: 'Nunito';
.row
    margin 0
#contenido
    min-height: "calc(100vh - %s)" % total
.title-h2
    font-size 3rem
.text-h1
    font-size 1rem
    margin 0 0 1rem 0
.bg-gris{
    background: #f5f5f5;
}
.bold{
    font-weight: bold;
}
.pointer{
    cursor: pointer;
}
.navbar-brand img{
    width:100%;
    max-width: 2.75rem;
}
.navbar-brand b{
    font-size:0.9rem;
}
.navbar-nav .nav-item{
    padding: 0 0.25rem;
}
.icon-social{
    display: none;
    font-size: 1.45rem;
    margin-left:0.5rem;
    color: #717171 !important;
}
.icon-social:hover{
    color:black !important;
}
.d-none-partial{
    display: none;
}
.icon-play
{
    font-size: 2rem !important;
}
footer
    background #212121
    color white
@media only screen and (min-width:768px)
{
    .icon-social{
        display: inline;
    }
    .seotags .row >div{
        padding-left:0;
    }
    .seotags .row >div:last-child{
        padding-right:0;
    }
}
@media only screen and (min-width:993px)
{
    .navbar-brand b{
        font-size:1.2rem;
    }
    .navbar-nav .nav-item{
        padding: 0 1rem;
    }
}
.banner
    background-image url(/img/banner-home-movil.jpg)
    background-size cover
    background-position center center
    background-repeat no-repeat
    @media only screen and (min-width:768px)
        background-image url(/img/banner-home.jpg)
    .row
        min-height: 15rem
    .box-img-jhon
        text-align: center
        padding-bottom 1rem
        @media only screen and (min-width:768px)
            text-align right
            padding-bottom 0
        .img-jhon
            box-shadow: 0 0 0.2rem rgba(0,0,0,0.9)
            max-width 8rem
            @media only screen and (min-width:768px)
                max-width 10rem
    .iconos-home
        a
            color white !important
            font-size 2rem
            margin-left 1rem
            box-shadow: 0 0 0.2rem rgba(0,0,0,0.9)
            &:hover
                text-shadow: 0 0 0.2rem rgba(255,255,255,0.9)
    h1,h2,.text-shado-white
        text-shadow: 0 0 0.2rem rgba(0,0,0,0.9)
.contacto
    .iconos-home
        padding-top 1rem
        i
            color #717171 !important
            font-size 2rem
            margin-left 1rem
.img-jhon
    border-radius 100%
    width 100%
.skills .list-skills
    div
        padding-bottom 0.5rem
    img
        max-width: 2.7rem
        margin-right 1rem
.border-img
    border-radius 0.5rem
    box-shadow 0 0 0.5rem rgba(0,0,0,0.2)
.servicios
    h3
        font-size 1rem
    .col-12:first-child
        padding-bottom 1rem
        @media only screen and (min-width:768px)
            padding-bottom 0
#portafolio-content
    .box-portafolio >div
        margin-bottom 1rem
        background white
        border-radius 0.15rem
        box-shadow -0.25rem -0.25rem 0.25rem 0 #fff, 0.25rem 0.25rem 0.25rem 0 rgba(0,0,0,.05)
    .img-portafolio
        display: flex;
        align-items: center;
        justify-content: center;
        height: 12rem;
        overflow: hidden;
        white-space: nowrap;
        @media only screen and (min-width:768px)
            height: 10rem;
        img
            max-width: 100%;
            max-height: 100%;
            width: auto;
            vertical-align: middle
    h4
        color black
        font-weight: bold
        margin 0
        font-size 1rem
        text-align: left
        @media only screen and (min-width:768px)
            font-size 1.15rem
.buttons-portafolio
    .btn-dark,.btn:hover
        color white
